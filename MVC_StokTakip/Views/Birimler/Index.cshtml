@using MVC_StokTakip.Models.Entity
@model List<MVC_StokTakip.Models.Entity.Birimler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Birimler Listesi</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <td>ID</td>
            <td>Birim</td>
            <td>Açıklama</td>
            <td>Sil</td>
            <td>Güncelle</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Birim</td>
                <td>@item.Aciklama</td>
                <td><a href="/Birimler/SilBilgiGetir/@item.ID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Birimler/GuncelleBilgiGetir/@item.ID" class="btn btn-warning">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<div><a href="/Birimler/YeniBirim/" class="btn btn-success" style="margin-top:10px">Kategori Ekle</a></div>
