@model List<MVC_StokTakip.Models.Entity.Markalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<table class="table table-bordered table-striped">
    <tr>
        <th>ID</th>
        <th>Kategori</th>
        <th>Marka</th>
        <th>Açıklama</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>
                    @item.ID
                </th>
                <td>@item.Kategoriler.Kategori</td>
                <td>@item.Marka</td>
                <td>@item.Aciklama</td>
                <td>@*<a href="/Markalar/SilBilgiGetir/@item.ID" class="btn btn-danger">Sil</a>*@</td>
                <td>
                    @Html.ActionLink("Sil", "Sil", new { id = item.ID },
                        new { @class = "btn btn-danger", @onclick = "return confirm('Kayıt Silinsin Mi?');" })
                </td>

                <td><a href="/Markalar/GuncelleBilgiGetir/@item.ID" class="btn btn-primary">Güncelle</a></td>
                <td><a href="/Markalar/Urunler/@item.ID" class="btn btn-info">Ürünler</a></td>

            </tr>
        }
    </tbody>
</table>
<div>
    <a href="/Markalar/Ekle/" class="btn btn-success">Marka Ekle</a>
</div>